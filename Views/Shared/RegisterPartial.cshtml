@model NewUser

<h4>Register!</h4>
<form  asp-action="Register" asp-controller="Home" method="post">
<div class="row">
    <div class="col-md-6 mb-3">
        <div class="text-danger"><span asp-validation-for="FirstName" class="text-danger small"></span></div>        
        <label asp-for="FirstName" class="col-sm-12 col-form-label "></label>
        <input type="text" class="form-control form-control-sm" id="colFormLabel"  asp-for="FirstName" placeholder="FirstName">
    </div>
    <div class="col-md-6 mb-3">
        <span asp-validation-for="LastName" class="text-danger small"></span>
        <label asp-for="LastName" class="col-sm-12 col-form-label "></label>
        <input type="text" class="form-control form-control-sm" id="colFormLabel"  asp-for="LastName" placeholder="LastName">
    </div>
</div>
<div class="mb-3">
    <span asp-validation-for="Email" class="text-danger small"></span>
    <label asp-for="Email" class="col-sm-12 col-form-label "></label>
    <input type="email" class="form-control form-control-sm" id="colFormLabel"  asp-for="Email" placeholder="you@example.com">
</div>
<div class="mb-3">
    <span asp-validation-for="Password" class="text-danger small"></span>
    <label asp-for="Password" class="col-sm-12 col-form-label "></label>
    <input type="password" class="form-control form-control-sm" id="colFormLabel"  asp-for="Password" placeholder="Password">
</div>
<div class="mb-3">
    <span asp-validation-for="PasswordConfirm" class="text-danger small"></span>
    <label asp-for="PasswordConfirm" class="col-sm-12 col-form-label "></label>
    <input type="password" class="form-control form-control-sm" id="colFormLabel"  asp-for="PasswordConfirm" placeholder="PasswordConfirm">

</div>
<br>
<button class="btn btn-primary btn-lg btn-block" type="submit">Register</button>
</form>