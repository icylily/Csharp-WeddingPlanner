@model NewWedding

<div class = "row">
    <div class = "col-md-2 text-center" ></div>
    <div class = "col-md-8 align-text-top text-center" ><h1>Plan Your Wedding</h1></div>
    <div class = "col-md-2 align-bottom text-center" ></div>
</div>

<div class = "row">
    <div class = "col-md-8 text-center" ></div>
    <div class = "col-md-2 text-center" > <a href="/Dashboard">Dashboard</a> | <a href="/logout">Log Out</a> </div>
    <div class = "col-md-2 align-bottom text-center" ></div>
</div>
<hr>


        <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <form asp-action="NewWeeding" asp-controller="Wedding" method="post"> 
            <div class="form-group row">
                <span asp-validation-for="WedderOne" class="text-danger small"></span>
                <label asp-for="WedderOne" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                <input type="text" class="form-control form-control-sm" id="colFormLabel"  asp-for="WedderOne" placeholder="Wedder One">
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="WedderTwo" class="text-danger small"></span>
                <label asp-for="WedderTwo" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                <input type="text" class="form-control form-control-sm" id="colFormLabel"  asp-for="WedderTwo" placeholder="WedderTwo">
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="DateofWeeding" class="text-danger small"></span>
                <label asp-for="DateofWeeding" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                <input type="date" class="form-control form-control-sm" id="colFormLabel"  asp-for="DateofWeeding" >
                </div>
            </div>
            <div class="form-group row">
                <span asp-validation-for="Address" class="text-danger small"></span>
                <label asp-for="Address" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                <input type="text" class="form-control form-control-sm" id="colFormLabel"  asp-for="Address" placeholder="Address">
                </div>
            </div>
            
            
            <button type="submit" class="btn btn-primary btn-lg  text-right" >Create</button>
            </form>
        </div>
        <div class="col-2"></div>
    </div>